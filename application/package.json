{
  "name": "user_service",
  "version": "0.1.0",
  "description": "Manages user accounts. Used for credential login and user information management.",
  "repository": {
    "type": "git",
    "url": "https://github.com/slidewiki/user-service"
  },
  "bugs": "https://github.com/slidewiki/user-service/issues",
  "author": "Kurt Junghanns",
  "license": "MPL-2.0",
  "main": "server.js",
  "scripts": {
    "clean": "rm -R ./node_modules/ ./coverage/",
    "lint": "eslint -c .eslintrc ./**/*.js",
    "test": "NODE_ENV=test npm run test:unit && npm run test:integration",
    "test:unit": "NODE_ENV=test mocha ./tests/unit_*.js",
    "test:integration": "NODE_ENV=test mocha --timeout 5000 ./tests/integration_*.js",
    "coverage": "istanbul cover _mocha --include-all-sources ./tests/*.js",
    "coverall": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "countLOC": "sloc -f cli-table -k total,source,comment,empty -e node_modules\\|coverage ./",
    "countLOC:details": "sloc -f cli-table -d -e node_modules\\|coverage ./",
    "start:watch": "nodemon",
    "start:mongodb": "docker run -d --name mongotest -p 27018:27017 mongo",
    "stop:mongodb": "docker stop mongotest && docker rm mongotest"
  },
  "dependencies": {
    "ajv": "^4.11.0",
    "async": "^2.4.0",
    "boom": "^4.2.0",
    "database-cleaner": "^1.2.0",
    "good": "^7.1.0",
    "good-console": "^6.2.0",
    "good-squeeze": "^5.0.1",
    "grant-hapi": "^3.6.5",
    "hapi": "^16.1.0",
    "hapi-auth-jwt2": "7.x",
    "hapi-swagger": "^7.6.0",
    "inert": "^4.1.0",
    "joi": "^10.2.0",
    "js-sha512": "^0.2.2",
    "mongodb": "^2.2.22",
    "purest": "2.0.1",
    "request": "^2.78.0",
    "smtp-connection": "^2.12.0",
    "vision": "^4.1.1",
    "yar": "^8.1.0"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-datetime": "^1.4.1",
    "coveralls": "^2.11.15",
    "eslint": "^3.14.0",
    "eslint-plugin-promise": "^3.4.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "sloc": "^0.2.0"
  },
  "pre-commit": [
    "lint"
  ]
}
